#ifndef STRING_MAP_H
#define STRING_MAP_H

#include <stddef.h>
#include <stdint.h>

/*
 * Maps interned strings to u32.
 */

typedef struct {
    size_t          count;
    size_t          bucketCapacity;
    size_t          dataCapacity;
    uint32_t*       buckets;
    uint8_t*        bitmap;
    const char**    keys;
    size_t*         keyLengths;
    uint32_t*       values;
} NsStringMap32;

NsStringMap32*  nsCreateStringMap32(void);
void            nsDestroyStringMap32(NsStringMap32* strMap);
int             nsGetStringMap32(uint32_t* dst, const NsStringMap32* strMap, const char* key);
void            nsSetStringMap32(NsStringMap32* strMap, const char* key, uint32_t value);

#endif
